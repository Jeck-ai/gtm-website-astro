---
import Contactform from "@/components/contactform.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">Strategic consulting for software startups and enterprises</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Contact Robert Douglass</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Looking for strategic guidance on Product-Market Fit, Go-To-Market, or AI implementation? Let's discuss how I will help your business scale effectively.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>Bonn, North Rhine-Westphalia, Germany</span>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" />
            <a href="mailto:robert@gtm-ventures.com">robert@gtm-ventures.com</a>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" />
            <a href="tel:+49 1727460021">+49 1727460021</a>
          </div>
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:linkedin" />
            <a href="https://www.linkedin.com/in/roberttdouglass" target="_blank">linkedin.com/in/roberttdouglass</a>
          </div>
        </div>
        
        <div class="mt-8">
          <h3 class="font-medium text-lg text-gray-800 mb-3">Available For</h3>
          <ul class="text-gray-600 space-y-1">
            <li>• Strategic consulting engagements</li>
            <li>• Workshops and team training</li>
            <li>• Advisory board positions</li>
            <li>• Speaking engagements</li>
            <li>• Fractional executive roles</li>
          </ul>
        </div>
        
        <div class="mt-8 bg-gray-50 p-4 rounded-lg border border-gray-100">
          <h3 class="font-medium text-lg text-gray-800 mb-2">Let's Connect via Signal</h3>
          <p class="text-gray-600">For secure communications, I'm available on Signal app at +49 1727460021.</p>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
